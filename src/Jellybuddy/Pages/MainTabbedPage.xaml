<?xml version="1.0" encoding="utf-8"?>

<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tabPages="clr-namespace:Jellybuddy.Pages.TabPages"
             xmlns:pages="clr-namespace:Jellybuddy.Pages"
             xmlns:viewModels="clr-namespace:Jellybuddy.ViewModels"
             x:Class="Jellybuddy.Pages.MainTabbedPage"
             x:DataType="viewModels:TabViewViewModel"
             CurrentPageChanged="MainTabbedPage_OnCurrentPageChanged">
    <tabPages:DashboardTab Title="Dashboard" BindingContext="{Binding ActiveSessionsViewModel.Model}" />
    <tabPages:LibraryTab Title="Library" />
    <tabPages:UsersTab Title="Users" />
    <tabPages:StatsTab Title="Stats" />
    <tabPages:SettingsTab Title="Settings" />
</TabbedPage>