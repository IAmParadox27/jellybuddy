<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jellybuddy.Controls.UserSummaryStatistic"
             x:Name="control">
    <Grid RowDefinitions="*,*">
        <Grid ColumnDefinitions="Auto,*" HorizontalOptions="Center">
            <Image VerticalOptions="Center" WidthRequest="14" HeightRequest="14" Aspect="AspectFill" Margin="0,0,2,0" Source="{Binding Icon, Source={x:Reference control}}" />
            <Label FontSize="13" FontAttributes="Bold" VerticalOptions="Center" Grid.Column="1" Text="{Binding Value, Source={x:Reference control}}" />
        </Grid>
        <Label FontSize="12" Grid.Row="1" HorizontalOptions="Center" HorizontalTextAlignment="Center" Text="{Binding Text, Source={x:Reference control}}" />
    </Grid>
</ContentView>